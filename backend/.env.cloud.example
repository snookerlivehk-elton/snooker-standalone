NODE_ENV=production
PORT=3000
# 以逗號分隔允許的前端／Overlay正式網址
CORS_ORIGIN=https://your-frontend.example.com,https://overlay.example.com

# 連到雲端資料庫（PostgreSQL）
# 範例：postgresql://<user>:<password>@<host>:5432/<db>?schema=public
DATABASE_URL=postgresql://user:password@db-host:5432/snooker?schema=public

# Socket.IO 路徑（若有反向代理請同步設定）
SOCKET_IO_PATH=/socket.io